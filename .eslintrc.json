{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "module": true,
        "require": true,
        "it": true,
        "describe": true,
        "before": true,
        "after": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}